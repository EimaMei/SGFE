.fvec SGFE_PROJECTION[4]

.out outpos position
.out outclr color

.alias inpos v0
.alias inclr v1

.proc main
    ; Force 1 on the W component and do projection * inpos.
    dph outpos.x, inpos, SGFE_PROJECTION[0]
    dph outpos.y, inpos, SGFE_PROJECTION[1]
    dph outpos.z, inpos, SGFE_PROJECTION[2]
    dph outpos.w, inpos, SGFE_PROJECTION[3]

    ; Set the output color.
    mov outclr, inclr
    end
.end